#: import os os

<Loader>:
    file_view: file_view
    auto_dismiss: False
    title: "Choose a File"
    FileChooserListView:
    	id: file_view
    	rootpath: os.path.expanduser("~")
    	on_submit: root.load(self.selection)

<Main>:
    play_button: play_button
    song_title: song_title
    orientation: 'vertical'
    Label:
    	id: song_title
    	text: "Choose a file"
    BoxLayout:
    	Button:
    	    text: "Load"
    	    on_press: root.show_popup()
        Button:
            text: "Pause"
            on_press: root._pause()
    	Button:
            id:play_button
    	    text: "Play"
            on_press: root._play()

